#!/bin/bash

# === Start of merged launcher and monitor script ===

# --- Step 1: Detect the first running Proton game ---
game=$(protonhax ls 2>/dev/null | head -n 1)

if [ -z "$game" ]; then
    echo "âŒ No Proton game is currently running."
    exit 1
fi

echo "âœ… Detected Proton game: $game"

# --- Step 2: Search for exact "Cheat Engine.exe" (case-insensitive) ---
SEARCH_DIR="${1:-$HOME}"
cheatengine_exe=$(find "$SEARCH_DIR" -type f -iname "Cheat Engine.exe" -print -quit)

if [ -z "$cheatengine_exe" ]; then
    echo "âŒ 'Cheat Engine.exe' not found in $SEARCH_DIR"
    exit 1
fi

echo "âœ… Found exact Cheat Engine.exe at: $cheatengine_exe"

# --- Step 3: Launch Cheat Engine using protonhax ---
protonhax run "$game" "$cheatengine_exe" &

# --- Step 4: Monitor running Steam game processes (excluding Proton and steam.exe) ---
echo "ğŸ” Searching for running Steam game processes (excluding Proton and steam.exe)..."

ps aux | grep -i steamapps | grep -vi proton | grep -vi steam.exe | grep -v grep | while read -r line; do
    echo "Detected Steam game process:"
    echo "$line"

    # Extract PID
    pid=$(echo "$line" | awk '{print $2}')
    echo "Using PID $pid as target."

    echo "â³ Waiting for process PID $pid to exit..."
    while kill -0 "$pid" 2>/dev/null; do
        sleep 1
    done
    echo "âœ… Process PID $pid has exited. Scanning for Cheat Engine..."

    pattern="cheatengine"
    user=$(whoami)

    echo "ğŸ” Searching for Cheat Engine and Proton .exe processes for user '$user', excluding python-launched ones..."

    ps -u "$user" -o pid=,comm=,cmd= | while read -r cp_pid comm cmdline; do
        comm_lc="${comm,,}"
        pattern_lc="${pattern,,}"

        if [[ "$comm_lc" == "$pattern_lc"* ]]; then
            echo "$cp_pid"
        elif [[ "$comm" == python* || "$comm" == wine* ]]; then
            if echo "$cmdline" | grep -iq "$pattern"; then
                echo "$cp_pid"
            fi
        else
            if echo "$cmdline" | grep -iqE "\.exe" && echo "$cmdline" | grep -iq "proton" && ! echo "$cmdline" | grep -iq "python"; then
                echo "$cp_pid"
            fi
        fi
    done > /tmp/cheatengine_pids.txt

    pids=$(cat /tmp/cheatengine_pids.txt)

    if [ -n "$pids" ]; then
        echo "âŒ Cheat Engine or Proton .exe processes detected (PIDs):"
        echo "$pids"

        # Try gentle kill first
        kill $pids 2>/dev/null
        sleep 1

        # Check if processes still exist, force kill if needed
        for kill_pid in $pids; do
            if kill -0 $kill_pid 2>/dev/null; then
                echo "âš ï¸ Process $kill_pid did not terminate, sending SIGKILL."
                kill -9 $kill_pid
            else
                echo "âœ… Process $kill_pid terminated."
            fi
        done
    else
        echo "âœ… No Cheat Engine or Proton .exe processes running (excluding python)."
    fi
done

echo "ğŸš€ All done."

